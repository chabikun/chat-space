= form_for group do |f|
  - if group.errors.any?
    .chat-group-form__errors
      %h2= "#{group.errors.full_messages.count}件のエラーが発生しました。"
      %ul
        - group.errors.full_messages.each do |message|
          %li= message

  .chat-group-form__field
    .chat-group-form__field--left
      = f.label :グループ名, class: 'chat-group-form__label'
    .chat-group-form__field--right
      = f.text_field :name, class: 'chat__group_name chat-group-form__input', placeholder: 'グループ名を入力してください'
  .chat-group-form__field.clearfix

  .chat-group-form-add
  .chat-group-form-add__field--left
    %label.chat-group-form-add__label{for: 'chat_group_チャットメンバーを追加'} チャットメンバーを追加
    .chat-group-form-add__field--right
    .chat-group-form__search.clearfix
      %input#user-search-field.chat-group-form-add__input{placeholder: '追加したいユーザー名を入力してください', type: 'text'}
    #user-search-result
    .chat-group-form__field.clearfix
    .chat-group-form__field.clearfix

  .chat-group-user-add
    .chat-group-user-add-candidacy
      = f.label :チャットメンバー, class: 'chat-group-user-add-candidacy__label'
    .chat-group-form__field.clearfix


    .chat-group-form__field.clearfix
    .chat-group-form__field.clearfix
  .chat-group-form__field--left
  .chat-group-form__field--right
    = f.submit class: 'chat-group-form__action-btn'


